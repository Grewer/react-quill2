{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "suppressImplicitAnyIndexErrors": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ]
}
